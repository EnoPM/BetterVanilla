<?xml version="1.0" encoding="utf-8"?>
<!--
  Example BVUI file demonstrating the XAML-like syntax.
  This file will be processed by the code generator to produce OptionsView.g.cs
-->
<View xmlns="http://schemas.bettervanilla.ui/2025"
      xmlns:x="http://schemas.bettervanilla.ui/2025/xaml"
      xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
      xsi:schemaLocation="http://schemas.bettervanilla.ui/2025 ../Schemas/bvui.xsd"
      x:Class="BetterVanilla.Ui.Views.OptionsView">

    <!-- Root panel container | test des propriétés LayoutGroup -->
    <Panel x:Name="root" Alias="Controls/Panel"
           Width="600"
           HorizontalAlignment="Left"
           VerticalAlignment="Stretch"
           Margin="20"
           Background="#1A1A2E"
           Orientation="Vertical"
           Padding="10"
           Spacing="8"
           ChildForceExpandWidth="false"
           ChildForceExpandHeight="false"
           ChildControlHeight="false"
           ChildAlignment="UpperCenter">
        <Panel x:Name="header" HorizontalAlignment="Stretch" Height="50">
            <!-- Title text - s'étire en largeur, visible si toggle activé -->
            <TextBlock x:Name="titleText"
                       Alias="Controls/TextBlock"
                       Text="{Binding Username, Mode=TwoWay}"
                       FontSize="40"
                       IsVisible="{Binding IsFeatureEnabled, Mode=OneWay}"
                       TextAlignment="MidlineLeft"
                       Margin="20,0,0,0"
                       Height="50"
                       Width="480"
                       HorizontalAlignment="Left"/>

            <!-- IconButton à droite (au même niveau que le spacer) -->
            <IconButton x:Name="closeButton" HorizontalAlignment="Right"
                        Margin="5"
                        Height="50"
                        Width="50"
                        Source="BetterVanilla.Ui.Assets.Images.CloseButtonIcon.png"
                        PreserveAspect="true"
                        Click="OnCloseClicked"/>
        </Panel>
        <Image HorizontalAlignment="Stretch" Height="300" Source="BetterVanilla.Ui.Assets.Images.SponsorBanner.png">
            <Button Height="50" Width="300"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Bottom"
                    Margin="0,0,0,50"
                    ShadowEnabled="true"
                    ShadowDistance="2,-2"
                    ShadowColor="#000000F0"
                    Text="Devenir un sponsor">
                <Button.TextStyle AutoSize="true" TextMargin="20,0" />
            </Button>
        </Image>


        <!-- ScrollView test - contient les contrôles scrollables -->
        <ScrollView x:Name="optionsScrollView"
                    HorizontalAlignment="Stretch"
                    FlexibleHeight="1"
                    Orientation="Vertical"
                    Spacing="8"
                    Padding="5"
                    Vertical="true"
                    Horizontal="false"
                    ChildForceExpandWidth="false"
                    ChildForceExpandHeight="false"
                    ChildControlHeight="false">

            <!-- Enable feature toggle - s'étire en largeur -->
            <Toggle x:Name="enableFeatureToggle"
                    Alias="Controls/Toggle"
                    Text="Enable Feature"
                    HorizontalAlignment="Stretch"
                    IsOn="{Binding IsFeatureEnabled, Mode=TwoWay}"
                    ValueChanged="OnFeatureToggleChanged">
                <Toggle.TextStyle MinFontSize="5" MaxFontSize="50" FontStyle="Bold"/>
            </Toggle>

            <!-- Volume slider - s'étire en largeur -->
            <Slider x:Name="volumeSlider"
                    Alias="Controls/Slider"
                    HorizontalAlignment="Stretch"
                    Value="{Binding Volume, Mode=TwoWay}"
                    ValueChanged="OnVolumeChanged"/>

            <!-- Username input - s'étire en largeur -->
            <InputField x:Name="usernameInput"
                        Alias="Controls/InputField"
                        Height="40"
                        HorizontalAlignment="Stretch"
                        Text="{Binding Username, Mode=TwoWay}"
                        ValueChanged="OnUsernameChanged">
                <InputField.TextStyle TextAlignment="MidlineLeft"/>
                <InputField.PlaceholderStyle TextAlignment="MidlineLeft"/>
                <Panel x:Name="usernameInputLocker"
                       VerticalAlignment="Stretch"
                       HorizontalAlignment="Stretch"
                       Background="#FF000016"
                       Margin="0"
                       IsVisible="{Binding IsFeatureEnabled, Mode=OneWay}">
                    <TextBlock TextAlignment="Midline" Text="Locked" TextColor="#FF0000" AutoSize="true" MinFontSize="5"
                               MaxFontSize="50"/>
                </Panel>
            </InputField>

            <Dropdown x:Name="difficultyDropdown" Options="{Binding DifficultyOptions, Mode=OneWay}"
                      HorizontalAlignment="Stretch" SelectedIndexChanged="OnDifficultyChanged"/>

            <!-- Éléments supplémentaires pour tester le scroll -->
            <TextBlock x:Name="testText1" Text="Test item 1" HorizontalAlignment="Stretch" Height="40"/>
            <TextBlock x:Name="testText2" Text="Test item 2" HorizontalAlignment="Stretch" Height="40"/>
            <TextBlock x:Name="testText3" Text="Test item 3" HorizontalAlignment="Stretch" Height="40"/>
            <TextBlock x:Name="testText4" Text="Test item 4" HorizontalAlignment="Stretch" Height="40"/>
            <TextBlock x:Name="testText5" Text="Test item 5" HorizontalAlignment="Stretch" Height="40"/>

        </ScrollView>

        <!-- Save button - largeur fixe, centré -->
        <Button x:Name="saveButton"
                Alias="Controls/Button"
                Text="Save Settings"
                Margin="50"
                Width="150" Height="40" HorizontalAlignment="Center"
                Click="OnSaveClicked">
            <Button.TextStyle TextMargin="10" TextColor="#FF0000" AutoSize="true"/>
        </Button>

        <!-- Cancel button - largeur fixe, centré -->
        <Button x:Name="cancelButton"
                Alias="Controls/Button"
                Text="Cancel"
                Width="150" Height="40" HorizontalAlignment="Right"
                Click="OnCancelClicked"/>

    </Panel>
</View>
