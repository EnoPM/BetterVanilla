<?xml version="1.0" encoding="utf-8"?>
<Localization xmlns="http://schemas.bettervanilla.localization/2025"
              xmlns:x="http://schemas.bettervanilla.localization/2025/xaml"
              x:Class="BetterVanilla.Localization.MenuLocalization"
              DefaultLanguage="En">

    <!-- Menu titles -->
    <Key x:Name="MenuTitle">
        <En>BetterVanilla Menu</En>
        <Fr>Menu BetterVanilla</Fr>
    </Key>
    
    <Key x:Name="BecomeSponsorButton">
        <En>Become a sponsor</En>
        <Fr>Devenir un sponsor</Fr>
    </Key>

    <Key x:Name="SettingsTitle">
        <En>Settings</En>
        <Fr>Paramètres</Fr>
    </Key>

    <Key x:Name="CosmeticsTitle">
        <En>Cosmetics</En>
        <Fr>Cosmétiques</Fr>
    </Key>

    <!-- Button labels -->
    <Key x:Name="SaveButton">
        <En>Save</En>
        <Fr>Sauvegarder</Fr>
    </Key>

    <Key x:Name="CancelButton">
        <En>Cancel</En>
        <Fr>Annuler</Fr>
    </Key>

    <Key x:Name="ApplyButton">
        <En>Apply</En>
        <Fr>Appliquer</Fr>
    </Key>

    <Key x:Name="CloseButton">
        <En>Close</En>
        <Fr>Fermer</Fr>
    </Key>

    <!-- Settings labels -->
    <Key x:Name="ShowFpsLabel">
        <En>Show FPS</En>
        <Fr>Afficher FPS</Fr>
    </Key>

    <Key x:Name="MasterVolumeLabel">
        <En>Master Volume</En>
        <Fr>Volume principal</Fr>
    </Key>

    <Key x:Name="LanguageLabel">
        <En>Language</En>
        <Fr>Langue</Fr>
    </Key>

    <!-- Messages -->
    <Key x:Name="WelcomeMessage">
        <En>Welcome to BetterVanilla!</En>
        <Fr>Bienvenue dans BetterVanilla !</Fr>
    </Key>

    <Key x:Name="SettingsSavedMessage">
        <En>Settings saved successfully</En>
        <Fr>Paramètres sauvegardés avec succès</Fr>
    </Key>

</Localization>
