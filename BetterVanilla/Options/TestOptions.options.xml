<?xml version="1.0" encoding="utf-8"?>
<OptionsHolder xmlns="http://schemas.bettervanilla.options/2025"
               xmlns:x="http://schemas.bettervanilla.options/2025/xaml"
               x:Class="BetterVanilla.Options.TestOptions"
               DefaultLanguage="En">

    <!-- Boolean options -->
    <BoolOption x:Name="EnableDebugMode" Default="false">
        <Label>
            <En>Enable Debug Mode</En>
            <Fr>Activer le mode debug</Fr>
        </Label>
        <Description>
            <En>Shows additional debugging information in the console</En>
            <Fr>Affiche des informations de débogage supplémentaires dans la console</Fr>
        </Description>
    </BoolOption>
    <BoolOption x:Name="ShowWatermark" Default="true">
        <Label>
            <En>Show Watermark</En>
            <Fr>Afficher le filigrane</Fr>
        </Label>
        <Description>
            <En>Display the mod watermark on screen</En>
            <Fr>Afficher le filigrane du mod sur l'écran</Fr>
        </Description>
    </BoolOption>

    <!-- Integer options with min/max -->
    <IntOption x:Name="MaxRetries" Default="3" Min="1" Max="10">
        <Label>
            <En>Max Retries</En>
            <Fr>Tentatives max</Fr>
        </Label>
        <Description>
            <En>Maximum number of connection retries</En>
            <Fr>Nombre maximum de tentatives de connexion</Fr>
        </Description>
    </IntOption>
    <IntOption x:Name="CacheSize" Default="100" Min="10" Max="1000">
        <Label>
            <En>Cache Size</En>
            <Fr>Taille du cache</Fr>
        </Label>
        <Description>
            <En>Size of the data cache in MB</En>
            <Fr>Taille du cache de données en Mo</Fr>
        </Description>
    </IntOption>

    <!-- Float options with min/max -->
    <FloatOption x:Name="Volume" Default="0.8" Min="0" Max="1">
        <Label>
            <En>Volume</En>
            <Fr>Volume</Fr>
        </Label>
        <Description>
            <En>Master volume level</En>
            <Fr>Niveau du volume principal</Fr>
        </Description>
    </FloatOption>
    <FloatOption x:Name="AnimationSpeed" Default="1.0" Min="0.1" Max="3.0">
        <Label>
            <En>Animation Speed</En>
            <Fr>Vitesse d'animation</Fr>
        </Label>
        <Description>
            <En>Speed multiplier for animations</En>
            <Fr>Multiplicateur de vitesse pour les animations</Fr>
        </Description>
    </FloatOption>

    <!-- String options with max length -->
    <StringOption x:Name="Username" Default="Player" MaxLength="32">
        <Label>
            <En>Username</En>
            <Fr>Nom d'utilisateur</Fr>
        </Label>
        <Description>
            <En>Your display name</En>
            <Fr>Votre nom d'affichage</Fr>
        </Description>
    </StringOption>
    <StringOption x:Name="ServerAddress" Default="localhost">
        <Label>
            <En>Server Address</En>
            <Fr>Adresse du serveur</Fr>
        </Label>
        <Description>
            <En>The server to connect to</En>
            <Fr>Le serveur auquel se connecter</Fr>
        </Description>
    </StringOption>

    <!-- Color options -->
    <ColorOption x:Name="AccentColor" Default="#FF5722">
        <Label>
            <En>Accent Color</En>
            <Fr>Couleur d'accentuation</Fr>
        </Label>
        <Description>
            <En>The accent color for UI elements</En>
            <Fr>La couleur d'accentuation pour les éléments d'interface</Fr>
        </Description>
    </ColorOption>
    <ColorOption x:Name="BackgroundColor" Default="#212121">
        <Label>
            <En>Background Color</En>
            <Fr>Couleur de fond</Fr>
        </Label>
        <Description>
            <En>The background color</En>
            <Fr>La couleur de fond</Fr>
        </Description>
    </ColorOption>

    <!-- Vector2 options -->
    <Vector2Option x:Name="WindowPosition" Default="100,100">
        <Label>
            <En>Window Position</En>
            <Fr>Position de la fenêtre</Fr>
        </Label>
        <Description>
            <En>The position of the window on screen</En>
            <Fr>La position de la fenêtre sur l'écran</Fr>
        </Description>
    </Vector2Option>
    <Vector2Option x:Name="DefaultScale" Default="1,1">
        <Label>
            <En>Default Scale</En>
            <Fr>Échelle par défaut</Fr>
        </Label>
        <Description>
            <En>The default scale for UI elements</En>
            <Fr>L'échelle par défaut pour les éléments d'interface</Fr>
        </Description>
    </Vector2Option>

</OptionsHolder>
