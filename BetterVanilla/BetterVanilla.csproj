<Project Sdk="Microsoft.NET.Sdk">

    <PropertyGroup>
        <TargetFramework>net10.0</TargetFramework>
        <LangVersion>latest</LangVersion>
        <ImplicitUsings>disable</ImplicitUsings>
        <Nullable>enable</Nullable>
        <!-- Exclude the nested XamlGenerator project from default globbing -->
        <DefaultItemExcludes>$(DefaultItemExcludes);Ui\Tools\**\*</DefaultItemExcludes>
    </PropertyGroup>

    <PropertyGroup>
        <Version>2.0.0</Version>
        <FileVersion>$(AssemblyVersion)</FileVersion>
    </PropertyGroup>

    <PropertyGroup>
        <AssemblyGuid>pm.eno.bettervanilla</AssemblyGuid>
        <AssemblyName>BetterVanilla</AssemblyName>
        <AssemblyVersion>$(Version).0</AssemblyVersion>
    </PropertyGroup>

    <PropertyGroup>
        <CopyToMods>$(AssemblyName)</CopyToMods>
    </PropertyGroup>

    <!-- BVUI Code Generation -->
    <PropertyGroup>
        <EnableBvuiGeneration>true</EnableBvuiGeneration>
    </PropertyGroup>

    <!-- Import BVUI build system -->
    <Import Project="Ui\Build\BetterVanilla.Ui.Xaml.props" />
    <Import Project="Ui\Build\BetterVanilla.Ui.Xaml.targets" />

    <!-- Embedded resources -->
    <ItemGroup>
        <EmbeddedResource Include="Assets\**"/>
        <!-- UI Assets with correct namespace prefix -->
        <EmbeddedResource Include="Ui\Assets\**" LogicalName="BetterVanilla.Ui.Assets.%(Filename)%(Extension)"/>
    </ItemGroup>

    <!-- Additional content files -->
    <ItemGroup>
        <None Include="Ui\ui-aliases.json" CopyToOutputDirectory="PreserveNewest" />
        <None Include="Ui\ui-aliases.schema.json" CopyToOutputDirectory="PreserveNewest" />
    </ItemGroup>

</Project>
