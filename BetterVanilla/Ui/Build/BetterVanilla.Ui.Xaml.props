<?xml version="1.0" encoding="utf-8"?>
<Project>
  <!--
    BetterVanilla.Ui XAML-like Generation System
    Default properties for BVUI code generation.
  -->

  <PropertyGroup>
    <!-- Enable BVUI generation by default -->
    <EnableBvuiGeneration Condition="'$(EnableBvuiGeneration)' == ''">true</EnableBvuiGeneration>

    <!-- Path to the BVUI generator tool -->
    <BvuiGeneratorPath Condition="'$(BvuiGeneratorPath)' == ''">$(MSBuildThisFileDirectory)..\Tools\BetterVanilla.Ui.XamlGenerator\bin\$(Configuration)\net10.0\BetterVanilla.Ui.XamlGenerator.dll</BvuiGeneratorPath>

    <!-- Default aliases file -->
    <BvuiAliasesFile Condition="'$(BvuiAliasesFile)' == ''">$(MSBuildThisFileDirectory)..\ui-aliases.json</BvuiAliasesFile>

    <!-- Output directory for generated files (in obj folder, like MSBuild source generators) -->
    <!-- Use obj\BvuiGenerated directly to avoid config-specific duplication -->
    <BvuiGeneratedOutputPath Condition="'$(BvuiGeneratedOutputPath)' == ''">$(MSBuildProjectDirectory)\obj\BvuiGenerated</BvuiGeneratedOutputPath>

    <!-- Verbose output -->
    <BvuiVerbose Condition="'$(BvuiVerbose)' == ''">false</BvuiVerbose>
  </PropertyGroup>

  <!-- Define the BvuiFile item type -->
  <ItemGroup>
    <!-- Auto-include all .bvui.xml files -->
    <BvuiFile Include="**\*.bvui.xml" Exclude="$(BaseIntermediateOutputPath)**;$(BaseOutputPath)**;Tools\**" />
  </ItemGroup>

  <!-- Mark BVUI files as None in the project (not compiled) -->
  <ItemGroup>
    <None Include="@(BvuiFile)" />
  </ItemGroup>

  <!-- Exclude generated files from default SDK globbing (we add them explicitly in targets) -->
  <ItemGroup>
    <Compile Remove="$(BvuiGeneratedOutputPath)\**\*.cs" />
  </ItemGroup>

</Project>
