<?xml version="1.0" encoding="utf-8"?>
<View xmlns="http://schemas.bettervanilla.ui/2025"
      xmlns:x="http://schemas.bettervanilla.ui/2025/xaml"
      xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
      xsi:schemaLocation="http://schemas.bettervanilla.ui/2025 ../../../BetterVanilla.Ui/Schemas/ui.xsd"
      x:Class="BetterVanilla.Views.Menu.MenuUi"
      LocalizationSource="MenuLocalization">
    <Panel x:Name="root" Alias="Controls/Panel"
           Width="600"
           HorizontalAlignment="Left"
           VerticalAlignment="Stretch">
        <Panel.LayoutGroup Orientation="Vertical"
                           Spacing="10"
                           Padding="5"
                           ChildForceExpandWidth="true"
                           ChildForceExpandHeight="false"
                           ChildControlHeight="true"
                           ChildControlWidth="true"
                           ChildAlignment="UpperCenter"/>
        <Panel.Image Color="#1A1A2E"/>
        <Panel x:Name="header" HorizontalAlignment="Stretch" Height="40">
            <Panel.LayoutGroup Orientation="Horizontal"
                               ChildAlignment="UpperLeft"
                               ChildControlWidth="true"
                               ChildControlHeight="false"
                               ChildForceExpandWidth="false"
                               ChildForceExpandHeight="false"/>
            <Panel x:Name="titleContainer" FlexibleWidth="1" Height="40">
                <Panel.LayoutGroup Orientation="Horizontal"
                                   Spacing="10"
                                   ChildControlWidth="true"
                                   ChildControlHeight="false"
                                   ChildForceExpandWidth="false"/>
                <Panel.Image Color="#000" />
                <TextBlock x:Name="nameText"
                           Alias="Controls/TextBlock"
                           Text="{Loc MenuTitle}"
                           FontSize="32"
                           TextAlignment="MidlineLeft"
                           FontStyle="Bold"
                           FitWidth="true"
                           WordWrapping="false"
                           Height="40"/>
                <TextBlock x:Name="versionText"
                           Alias="Controls/TextBlock"
                           Text="{Binding MenuVersion, Mode=OneWay}"
                           FontSize="22"
                           TextAlignment="MidlineLeft"
                           FitWidth="true"
                           Height="40"/>
            </Panel>
            <IconButton Alias="Controls/IconButton"
                        x:Name="closeButton"
                        Height="40"
                        Width="40"
                        Click="OnCloseClicked">
                <IconButton.Image ImageType="Simple" PreserveAspect="true">
                    <Image.Source EmbeddedResource="BetterVanilla.Assets.extras.bundle::Assets/Ui/CloseButton.png"/>
                </IconButton.Image>
            </IconButton>
        </Panel>
        <ScrollView x:Name="optionsScrollView"
                    HorizontalAlignment="Stretch"
                    ScrollSensitivity="15"
                    FlexibleHeight="1"
                    Vertical="true"
                    Horizontal="false">
            <ScrollView.LayoutGroup Orientation="Vertical"
                                    Spacing="8"
                                    Padding="5"
                                    ChildForceExpandWidth="false"
                                    ChildForceExpandHeight="false"
                                    ChildControlHeight="false"/>
            <ScrollView.Image Color="#00000000"/>
            <Dropdown x:Name="language"
                      Options="{Binding AvailableLanguages, Mode=OneWay}"
                      SelectedIndex="{Binding SelectedLanguage, Mode=TwoWay}"
                      Width="90%"/>
            <Image HorizontalAlignment="Stretch"
                   Margin="10"
                   Height="300"
                   PreserveAspect="true">
                <Image.Source EmbeddedResource="BetterVanilla.Assets.extras.bundle::Assets/Ui/SponsorBanner.png"/>
                <Button Height="50" Width="300"
                        HorizontalAlignment="Center"
                        VerticalAlignment="Bottom"
                        Margin="0,0,0,50"
                        ShadowEnabled="true"
                        ShadowDistance="2,-2"
                        ShadowColor="#000000F0"
                        Click="OnBecomeSponsorButtonClick"
                        Text="{Loc BecomeSponsorButton}">
                    <Button.TextStyle AutoSize="true" TextMargin="20,0"/>
                </Button>
            </Image>
            <Image Width="100%" Height="500" ImageType="Simple" PreserveAspect="true">
                <Image.Source Url="https://live.staticflickr.com/3739/13679012225_4e419bfbdc_b.jpg"/>
            </Image>
            <!-- Éléments supplémentaires pour tester le scroll et la localisation -->
            <TextBlock IsVisible="{Binding ShouldDisplayAdditionalTexts, Mode=OneWay}" x:Name="testText1"
                       Text="{Loc SettingsTitle}" HorizontalAlignment="Stretch" Height="40"/>
            <TextBlock IsVisible="{Binding ShouldDisplayAdditionalTexts, Mode=OneWay}" x:Name="testText2"
                       Text="{Loc CosmeticsTitle}" HorizontalAlignment="Stretch" Height="40"/>
            <TextBlock IsVisible="{Binding ShouldDisplayAdditionalTexts, Mode=OneWay}" x:Name="testText3"
                       Text="{Loc WelcomeMessage}" HorizontalAlignment="Stretch" Height="40"/>
            <TextBlock IsVisible="{Binding ShouldDisplayAdditionalTexts, Mode=OneWay}" x:Name="testText4"
                       Text="{Loc LanguageLabel}" HorizontalAlignment="Stretch" Height="40"/>
            <TextBlock IsVisible="{Binding ShouldDisplayAdditionalTexts, Mode=OneWay}" x:Name="testText5"
                       Text="{Loc SaveButton}" HorizontalAlignment="Stretch" Height="40"/>
        </ScrollView>
    </Panel>
</View>