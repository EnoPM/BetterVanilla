<?xml version="1.0" encoding="utf-8"?>
<Project>

    <Target Name="CopyToMods" AfterTargets="AfterBuild">
        <MakeDir Directories="$(ModsDirectoryPath)" Condition="!Exists('$(ModsDirectoryPath)')"/>
        <Copy SourceFiles="$(TargetPath)" DestinationFolder="$(ModsDirectoryPath)\$(CopyToMods)" SkipUnchangedFiles="true"/>
        <Message Importance="High" Text="Copied $(TargetFileName) to $(ModsDirectoryPath)"/>
    </Target>
  
</Project>
