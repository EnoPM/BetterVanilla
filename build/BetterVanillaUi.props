<?xml version="1.0" encoding="utf-8"?>
<Project>
    <!-- Reference BetterVanilla.Ui project -->
    <ItemGroup>
        <ProjectReference Include="$(MSBuildThisFileDirectory)..\BetterVanilla.Ui\BetterVanilla.Ui.csproj" />
    </ItemGroup>

    <!-- Reference the Source Generator -->
    <ItemGroup>
        <ProjectReference Include="$(MSBuildThisFileDirectory)..\BetterVanilla.Ui.SourceGenerator\BetterVanilla.Ui.SourceGenerator.csproj"
                          OutputItemType="Analyzer"
                          ReferenceOutputAssembly="false" />
    </ItemGroup>

    <!-- UI XML files as AdditionalFiles for the source generator -->
    <ItemGroup>
        <AdditionalFiles Include="**\*.ui.xml" Exclude="$(BaseIntermediateOutputPath)**;$(BaseOutputPath)**" />
        <AdditionalFiles Include="$(MSBuildThisFileDirectory)..\BetterVanilla.Ui\ui-aliases.json" />
    </ItemGroup>

    <!-- Tell MSBuild/IDE that .ui.xml files should trigger rebuild when modified -->
    <ItemGroup>
        <UpToDateCheckInput Include="**\*.ui.xml" Exclude="$(BaseIntermediateOutputPath)**;$(BaseOutputPath)**" />
        <UpToDateCheckInput Include="$(MSBuildThisFileDirectory)..\BetterVanilla.Ui\ui-aliases.json" />
    </ItemGroup>

    <!-- Track .ui.xml files as None items for Rider/MSBuild change detection -->
    <ItemGroup>
        <None Include="**\*.ui.xml" Exclude="$(BaseIntermediateOutputPath)**;$(BaseOutputPath)**" Watch="true" />
    </ItemGroup>

    <!-- Disable fast up-to-date check to ensure source generator runs on .ui.xml changes -->
    <PropertyGroup>
        <DisableFastUpToDateCheck>true</DisableFastUpToDateCheck>
    </PropertyGroup>

</Project>
